<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox spacing="10" style="-fx-padding: 15;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.alex_the_nugget.taskhub.taskhub.controllers.employee.EmployeeTaskInfoController">
    <Label fx:id="taskNameLabel" alignment="CENTER" contentDisplay="CENTER" prefHeight="27.0" prefWidth="484.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" textAlignment="CENTER" textFill="#e56b6f">
      <font>
         <Font name="Drina" size="20.0" />
      </font></Label>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Manager name:" wrappingWidth="169.47149658203125">
      <font>
         <Font name="Lato Bold" size="12.0" />
      </font>
   </Text>
    <Label fx:id="managerLabel" prefHeight="18.0" prefWidth="328.0" textFill="#e56b6f">
      <font>
         <Font name="Lato Regular" size="14.0" />
      </font></Label>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tag:" wrappingWidth="169.47149658203125">
      <font>
         <Font name="Lato Bold" size="12.0" />
      </font>
   </Text>
    <Label fx:id="tagLabel" prefHeight="18.0" prefWidth="309.0" textFill="#e56b6f">
      <font>
         <Font name="Lato Regular" size="14.0" />
      </font></Label>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Dates:" wrappingWidth="169.47149658203125">
      <font>
         <Font name="Lato Bold" size="12.0" />
      </font>
   </Text>
    <Label fx:id="datesLabel" prefHeight="18.0" prefWidth="317.0" textFill="#e56b6f">
      <font>
         <Font size="14.0" />
      </font></Label>
    <Label style="-fx-font-weight: bold;" text="Description:">
        <font>
            <Font name="Lato Regular" size="12.0" />
        </font>
    </Label>
    <TextArea fx:id="description" editable="false" prefHeight="178.0" prefWidth="491.0" style="-fx-font-weight: bold; -fx-text-fill: #e56b6f;" wrapText="true">
        <font>
            <Font name="Lato Regular" size="14.0" />
        </font>
    </TextArea>

    <HBox spacing="10">
        <Label style="-fx-font-weight: bold;" text="Status:" />
        <ComboBox fx:id="statusComboBox" prefHeight="17.0" prefWidth="178.0" styleClass="style.css" stylesheets="@style.css" />
    </HBox>

    <HBox spacing="10">
        <Label style="-fx-font-weight: bold;" text="Rating:">
         <font>
            <Font name="Lato Regular" size="12.0" />
         </font></Label>
        <HBox fx:id="ratingBox" alignment="CENTER" spacing="5">
            <Button fx:id="okRatingButton" mnemonicParsing="false" styleClass="signin" stylesheets="@style.css" text="Ok" textFill="WHITE">
                <font>
                    <Font name="Lato Regular" size="14.0" />
                </font>
            </Button>
            <Button fx:id="goodButton" mnemonicParsing="false" styleClass="signin" stylesheets="@style.css" text="Good" textFill="WHITE">
                <font>
                    <Font name="Lato Regular" size="14.0" />
                </font>
            </Button>
            <Button fx:id="badButton" mnemonicParsing="false" styleClass="signin" stylesheets="@style.css" text="Bad" textFill="WHITE">
                <font>
                    <Font name="Lato Regular" size="14.0" />
                </font>
            </Button>
        </HBox>
    </HBox>
    <HBox alignment="CENTER">
        <Button fx:id="okButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="259.0" styleClass="signin" stylesheets="@style.css" text="Ok" textAlignment="CENTER" textFill="WHITE">
            <font>
                <Font name="Lato Regular" size="14.0" />
            </font>
        </Button>
    </HBox>
</VBox>
